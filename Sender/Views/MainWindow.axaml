
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Sender.ViewModels;assembly=Sender"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Sender.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Sender">


	<StackPanel>
		<Button Width="160" Command="{Binding OnClickCommand}">Connect</Button>
		<TextBox AcceptsReturn="False"
				 Text="{Binding IP}"
				 Watermark="Enter your IP"/>
		<TextBox AcceptsReturn="False"
				 Text="{Binding Port}"
				 Watermark="Enter your Port n°"/>
		<TextBox AcceptsReturn="False"
				 Text="{Binding Message}"
				 Watermark="Enter your Message"/>
	</StackPanel>

</Window>
